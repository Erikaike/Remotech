{% block title %}Device{% endblock %}

{% block body %}
    <h1>Device</h1>
{{ render_chart(chart) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ device.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ device.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ device.status }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ device.picture }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ device.state }}</td>
